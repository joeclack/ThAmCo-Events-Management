@page
@model ThAmCo.Events.Pages.Catering.FoodItems.CreateModel
@{
}
<div class="mx-5 mt-5">
    <div class="mb-5">
        <h1 class="display-4">Create New Menu</h1>
        <p class="lead">Fill in the details to create a new menu.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="card-title mb-3">Menu Information</h4>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="FoodItem.Name" class="control-label">Name</label>
                    <input asp-for="FoodItem.Name" class="form-control" />
                    <span asp-validation-for="FoodItem.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FoodItem.Description" class="control-label">Description</label>
                    <input asp-for="FoodItem.Description" class="form-control" />
                    <span asp-validation-for="FoodItem.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FoodItem.UnitPrice" class="control-label">Unit Price</label>
                    <input asp-for="FoodItem.UnitPrice" class="form-control" />
                    <span asp-validation-for="FoodItem.UnitPrice" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create Menu
                    </button>
                    <a class="btn btn-secondary" asp-page="Index">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
