@page
@model FoodItemsModel
@{
    ViewData["Title"] = "Food Items";
}
<div class="mx-5 my-2">
    <div class="mb-3">
        <h1 class="display-4">Food Management</h1>
    </div>

    <div class="align-items-center d-flex flex-row mb-4">
        <a class="btn btn-primary bg-gradient" asp-page="Create">
            <i class="bi bi-person-plus"></i> Create New Food Item
        </a>
        <h5 class="mx-2">@Model.FoodItems.Count() food items</h5>
    </div>

    <div class="table-responsive">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Unit Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.FoodItems)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div>
                                    <p class="fw-bold mb-1">@item.Name</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div>
                                    <p class="fw-bold mb-1">@item.Description</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div>
                                    <p class="fw-bold mb-1">@item.UnitPrice</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="hstack gap-1" role="group">
                                <a asp-page="./Edit" class="btn btn-primary btn-sm" asp-route-id="@item.FoodItemId">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-page="./Details" class="btn btn-info btn-sm text-white" asp-route-id="@item.FoodItemId">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a data-toggle="modal" data-id="@item.FoodItemId" data-target="#deleteConfirmationModal" class="btn btn-danger btn-sm" asp-route-id="@item.FoodItemId">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.FoodItems.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            No food items found. Click "Create New Food Item" to add your first food item.
        </div>
    }
</div>

<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalTitle">Are you sure you want to delete this item?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

                <!-- Form for delete confirmation -->
                <form asp-page-handler="DeleteFoodItem" method="post">
                    <input type="hidden" name="foodItemId" id="deleteFoodItemId" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

