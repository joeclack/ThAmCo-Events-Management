@page
@model FoodItemsModel
@{
    ViewData["Title"] = "Food Items";
}

<div class="page-container">
    <!-- Header Section -->
    <header class="header">
        <h1>Food Items Management</h1>
    </header>

    <!-- Create New Food Item and Count Section -->
    <section class="create-total-header">
        <a asp-page="Create" class="btn-submit">Create New Food Item</a>
        @if (Model.FoodItems.Any())
        {
            <span class="count-span">@Model.FoodItems.Count() food items</span>
        }
    </section>

    <!-- No Food Items Warning Section -->
    @if (!Model.FoodItems.Any())
    {
        <div class="alert warning-alert" role="alert">
            <strong>No food items found.</strong> Click "Create New Food Item" to add your first food item.
        </div>
    }

    <!-- Food Items Table Section -->
    <section>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Unit Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.FoodItems)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>£@item.UnitPrice</td>
                        <td class="person-row">
                            <form method="post" class="action-buttons" asp-page-handler="DeleteFoodItem">
                                <a class="btn-edit" asp-page="./Edit" asp-route-id="@item.FoodItemId">Edit</a>
                                <a class="btn-details" asp-page="./Details" asp-route-id="@item.FoodItemId">Details</a>
                                <input type="hidden" name="foodItemId" value="@item.FoodItemId" />
                                <button type="submit" class="btn-delete">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>