@page
@model ThAmCo.Events.Pages.Catering.FoodItems.DetailsModel
@{
}
<div class="mx-5 mt-2">
    <div>
        <h1 class="display-4">Food Item Details</h1>
    </div>
    @if (Model.FoodItem == null)
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Food item not found</h4>
            <p>The requested food item could not be found.</p>
        </div>
        <a asp-page="./Index" class="btn btn-secondary btn">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
        return;
    }
    else
    {
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h4 class="card-title mb-3">Food Item Information</h4>
                <dl class="row">
                    <dt class="col-sm-3 font-weight-bold">Name</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FoodItem.Name)</dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-3 font-weight-bold">Description</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FoodItem.Description)</dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-3 font-weight-bold">Unit Price</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FoodItem.UnitPrice)</dd>
                </dl>
            </div>
        </div>


        <div class=" mt-4">
            <a asp-page="./Edit" class="btn btn-primary btn" asp-route-id="@Model.FoodItem.FoodItemId">
                <i class="bi bi-pencil-square"></i> Edit Food Item
            </a>
            <a asp-page="./Index" class="btn btn-secondary btn">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>
    }

</div>