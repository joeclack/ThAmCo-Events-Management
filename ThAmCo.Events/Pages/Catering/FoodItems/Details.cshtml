@page
@model ThAmCo.Events.Pages.Catering.FoodItems.DetailsModel
@{
    ViewData["Title"] = "Food Item Details";
}

<div class="page-container">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">Food Item Details</h1>
        </div>

        @if (Model.FoodItem == null)
        {
            <div class="alert error-alert" role="alert">
                <h4>Food item not found</h4>
                <p>The requested food item could not be found.</p>
            </div>
            <div class="modal-footer">
                <a asp-page="./Index" class="btn-cancel">Back to List</a>
            </div>
        }
        else
        {
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h3>Food Item Information</h3>
                        <div class="list-item">
                            <span class="card-label">Name</span>
                            <span class="card-value">@Model.FoodItem.Name</span>
                        </div>
                        <div class="list-item">
                            <span class="card-label">Description</span>
                            <span class="card-value">@Model.FoodItem.Description</span>
                        </div>
                        <div class="list-item">
                            <span class="card-label">Unit Price</span>
                            <span class="card-value">£@Model.FoodItem.UnitPrice</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <div class="action-buttons">
                    <a asp-page="./Edit" class="btn-edit" asp-route-id="@Model.FoodItem.FoodItemId">
                        Edit Food Item
                    </a>
                    <a asp-page="./Index" class="btn-cancel">Back to List</a>
                </div>
            </div>
        }
    </div>
</div>