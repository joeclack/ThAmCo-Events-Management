}
<div class="mx-5 mt-5">
    <div class="mb-5">
        <h1 class="display-4">Edit Menu</h1>
        <p class="lead">Modify the details of this menu.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="card-title mb-3">Food Item Details</h4>

            <!-- Main Event Form -->
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="FoodItem.FoodItemId" />

                <!-- Event Form Fields -->
                <div class="form-group">
                    <label asp-for="FoodItem.Name" class="control-label"></label>
                    <input asp-for="FoodItem.Name" class="form-control" />
                    <span asp-validation-for="FoodItem.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FoodItem.Description" class="control-label"></label>
                    <input asp-for="FoodItem.Description" class="form-control" />
                    <span asp-validation-for="FoodItem.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FoodItem.UnitPrice" class="control-label"></label>
                    <input asp-for="FoodItem.UnitPrice" class="form-control" />
                    <span asp-validation-for="FoodItem.UnitPrice" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>

