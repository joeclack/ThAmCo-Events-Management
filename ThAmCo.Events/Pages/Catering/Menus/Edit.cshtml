@page
@model ThAmCo.Events.Pages.Catering.Menus.EditModel
@{
}
<div class="mx-5 mt-5">
    <div class="mb-5">
        <h1 class="display-4">Edit Event</h1>
        <p class="lead">Modify the details of this menu.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="card-title mb-3">Event Details</h4>

            <!-- Main Event Form -->
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Menu.MenuId" />

                <!-- Event Form Fields -->
                <div class="form-group">
                    <label asp-for="Menu.MenuName" class="control-label"></label>
                    <input asp-for="Menu.MenuName" class="form-control" />
                    <span asp-validation-for="Menu.MenuName" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <!-- Staff Section -->
        <div class="w-100 mx-2">
            <h5>Manage Food Items</h5>

            <form asp-page-handler="AddFoodItem" method="post">
                <input type="hidden" name="menuId" value="@Model.Menu.MenuId" />

                <div class="form-group mt-2">
                    <div class="d-flex">
                        <select id="foodList" class="form-control me-2" name="staffId">
                            <option value="">Select Food</option>
                            @foreach (var food in Model.AvailableFoodItems)
                            {
                                <option value="@food.FoodItemId">@food.FoodItemName</option>
                            }
                        </select>

                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-person-plus"></i> Add
                        </button>
                    </div>
                </div>
            </form>

            <ul class="list-group mt-4">
                @foreach (var food in Model.Menu.FoodItems)
                {
                    <form asp-page-handler="RemoveFoodItem" method="post">
                        <input type="hidden" name="menuId" value="@Model.Menu.MenuId" />
                        <input type="hidden" name="foodItemId" value="@food.FoodItemId" />

                    <li class="list-group-item d-flex justify-content-between">
                            @food.FoodItemName
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-x-circle"></i> Remove
                        </button>
                    </li>
                    </form>
                }
            </ul>
        </div>

    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}