@page
@model MenusModel
@{
    ViewData["Title"] = "Menu List";
}

<div class="page-container">
    <!-- Header Section -->
    <header class="header">
        <h1>Menu Management</h1>
    </header>

    <!-- Create New Menu and Count Section -->
    <section class="create-total-header">
        <a asp-page="Create" class="btn-submit">
            Create New Menu
        </a>
        @if (Model.Menus.Any())
        {
            <span class="count-span">@Model.Menus.Count() menus</span>
        }
    </section>

    <!-- No Menus Warning Section -->
    @if (!Model.Menus.Any())
    {
        <div role="alert" class="alert warning-alert">
            <strong>No menus found.</strong> Click "Create New Menu" to add your first menu.
        </div>
    }

    <!-- Menu Cards Section -->
    <section>
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 100%;">Menu Name</th>
                    <th style="width: min-content;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Menus)
                {
                    <tr>
                        <td>@item.MenuName</td>
                        <td class="person-row">
                            <form method="post" class="action-buttons" asp-page-handler="DeleteMenu">
                                <a class="btn-edit" asp-page="./Edit" asp-route-id="@item.MenuId">Edit</a>
                                <a class="btn-details" asp-page="./Details" asp-route-id="@item.MenuId">Details</a>
                                <input type="hidden" name="menuId" value="@item.MenuId" />
                                <button type="submit" class="btn-delete">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

    <!-- Delete Confirmation Modal -->
    <div class="modal" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalTitle" aria-hidden="true">
        <div class="modal-content" role="document">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalTitle">Delete Menu</h5>
                <button type="button" class="close-modal-btn" data-dismiss="modal" aria-label="Close">×</button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this menu? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-cancel" data-dismiss="modal">Cancel</button>
                <form asp-page-handler="DeleteMenu" method="post">
                    <input type="hidden" name="menuId" id="deleteMenuId" />
                    <button type="submit" class="btn-delete">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#deleteConfirmationModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var menuId = button.data('id');
            $('#deleteMenuId').val(menuId);
        });
    });
</script>

