@page
@model MenusModel
@{
    ViewData["Title"] = "Menu List";
}

<div class="mx-5 my-2">
    <div class="mb-3">
        <h1 class="display-4">Menus</h1>
    </div>

    <div class="text-right mb-2">
        <a asp-page="Create" class="btn btn-primary bg-gradient">
            <i class="bi bi-plus-lg"></i> Create New Menu
        </a>
    </div>
    <span class="mb-3 badge bg-info">@Model.Menus.Count() menus</span>
    <div class="d-flex flex-column gap-4">
       @foreach (var item in Model.Menus)
        {
            <div class="card shadow-sm border-light rounded p-3">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="flex-grow-1">
                        <h5 class="card-title fw-bold text-primary">@item.MenuName</h5>
                    </div>
                    <div class="d-flex flex-column align-items-end">
                        <div class="btn-group-horizontal" role="group">
                            <a asp-page="./Edit" class="btn btn-primary btn-sm" asp-route-id="@item.MenuId">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="./Details" class="btn btn-info btn-sm text-white" asp-route-id="@item.MenuId">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a href="#" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteConfirmationModal" data-id="@item.MenuId">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Menus.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            <strong>Oh no!</strong> No menus found. Click "Create New Menu" to add your first menu.
        </div>
    }
</div>

<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalTitle">Are you sure you want to delete this menu?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

                <form asp-page-handler="DeleteMenu" method="post">
                    <input type="hidden" name="menuId" id="deleteMenuId" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('#deleteConfirmationModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var menuId = button.data('id');
            $('#deleteMenuId').val(menuId);
        });
    });
</script>

