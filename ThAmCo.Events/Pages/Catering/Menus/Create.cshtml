@page
@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Mvc.RazorPages;

@attribute [Authorize]
@model ThAmCo.Events.Pages.Catering.Menus.CreateModel
@{
    ViewData["Title"] = "Create Menu";
}

<div class="page-container">
    <div class="header">
        <h1>Create New Menu</h1>
        <p>Fill in the details to create a new menu.</p>
    </div>

    <div class="card">
        <h4 class="card-title">Menu Information</h4>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert error-alert"></div>

            <div class="form-group">
                <label asp-for="Menu.MenuName" class="card-label">Menu Name</label>
                <input asp-for="Menu.MenuName" class="form-select" />
                <span asp-validation-for="Menu.MenuName" class="warning-alert"></span>
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Create Menu</button>
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
