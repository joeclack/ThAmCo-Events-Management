@page
@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Mvc.RazorPages;

@attribute [Authorize]
@model ThAmCo.Events.Pages.Catering.FoodBookings.DetailsModel
@{
	ViewData["Title"] = "Food Booking Details";
}

<div class="page-container">
	<div class="card">
		<div class="card-header">
			<h1 class="card-title">Food Booking Details</h1>
		</div>

		@if (Model.FoodBooking == null)
		{
			<div class="alert error-alert" role="alert">
				<h4>Food booking not found</h4>
				<p>The requested booking could not be found.</p>
			</div>
			<div class="modal-footer">
				<a asp-page="./Index" class="btn-cancel">Back to List</a>
			</div>
		}
		else
		{
			<div class="card-body">
				<div class="row">
					<div class="col-md-6">
						<h3>Booking Information</h3>
						<div class="list-item">
							<span class="card-label">Booking ID</span>
							<span class="card-value">@Model.FoodBooking.FoodBookingId</span>
						</div>
						<div class="list-item">
							<span class="card-label">Client Reference</span>
							<span class="card-value">
								@if (Model.FoodBooking.ClientReferenceId.HasValue)
								{
									@Model.FoodBooking.ClientReferenceId
								}
								else
								{
									<span class="text-muted">No client reference</span>
								}
							</span>
						</div>
						<div class="list-item">
							<span class="card-label">Number of Guests</span>
							<span class="card-value">@Model.FoodBooking.NumberOfGuests</span>
						</div>
					</div>

					<div class="col-md-6">
						<h3>Menu Details</h3>
						<div class="list-item">
							<span class="card-label">Menu ID</span>
							<span class="card-value">@Model.FoodBooking.MenuId</span>
						</div>
						<div class="list-item">
							<span class="card-label">Menu Name</span>
							<span class="card-value">@Model.FoodBooking.MenuName</span>
						</div>
						<div class="list-item">
							<span class="card-label">Booking Date</span>
							<span class="card-value">@Model.FoodBooking.FoodBookingDate.ToShortDateString()</span>
						</div>
					</div>
				</div>
			</div>

			<div class="card-footer">
				<div class="action-buttons">
					<a asp-page="./Edit" class="btn-edit" asp-route-id="@Model.FoodBooking.FoodBookingId">
						Edit Booking
					</a>
					<a asp-page="./Index" class="btn-cancel">Back to List</a>
				</div>
			</div>
		}
	</div>
</div>

