@page
@model ThAmCo.Events.Pages.Staff.DetailsModel

@{
    ViewData["Title"] = "Staff Details";
}

<div class="page-container">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">@Model.Staff.FirstName @Model.Staff.LastName</h1>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h3>Staff Information</h3>
                    <div class="list-item">
                        <span class="card-label">First Name</span>
                        <span class="card-value">@Model.Staff.FirstName</span>
                    </div>
                    <div class="list-item">
                        <span class="card-label">Last Name</span>
                        <span class="card-value">@Model.Staff.LastName</span>
                    </div>
                    <div class="list-item">
                        <span class="card-label">Role</span>
                        <span class="card-value">@Model.Staff.Role</span>
                    </div>
                    <div class="list-item">
                        <span class="card-label">First Aider</span>
                        <span class="card-value">@(Model.Staff.IsFirstAider ? "Yes" : "No")</span>
                    </div>
                </div>

                <div class="col-md-6">
                    <h3>Event Assignments</h3>
                    <div class="list-item">
                        <span class="card-label">Total Events</span>
                        <span class="card-value">@Model.Events.Count()</span>
                    </div>

                    <h3 class="mt-3">Upcoming Events</h3>
                    @if (Model.Events.Any())
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Event Name</th>
                                    <th>Location</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var e in Model.Events)
                                {
                                    <tr>
                                        <td>@e.Name</td>
                                        <td>@e.Location</td>
                                        <td>@e.Date.ToShortDateString()</td>
                                        <td>
                                            <div class="action-group">
                                                <form asp-page-handler="ViewEvent" class="d-inline">
                                                    <input type="hidden" name="id" value="@e.EventId" />
                                                    <button type="submit" id="@e.EventId" class="btn-details">
                                                        View Event
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert warning-alert">
                            This staff member is not assigned to any upcoming events.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="card-footer">
            <div class="action-buttons">
                <a asp-page="./Edit" class="btn-edit" asp-route-id="@Model.Staff.StaffId">
                    Edit Staff
                </a>
                <a asp-page="./Index" class="btn-cancel">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>
