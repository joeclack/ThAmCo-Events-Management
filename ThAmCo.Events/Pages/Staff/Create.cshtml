@page
@model ThAmCo.Events.Pages.Staff.CreateModel

@{
    ViewData["Title"] = "Create Staff";
}

<div class="page-container">
    <div class="header">
        <h1>Create New Staff Member</h1>
        <p>Fill in the details to create a new staff member.</p>
    </div>

    <div class="card">
        <h4 class="card-title">Staff Information</h4>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert error-alert"></div>

            <div class="form-group">
                <label asp-for="Staff.FirstName" class="card-label">First Name</label>
                <input asp-for="Staff.FirstName" class="form-select" />
                <span asp-validation-for="Staff.FirstName" class="warning-alert"></span>
            </div>

            <div class="form-group">
                <label asp-for="Staff.LastName" class="card-label">Last Name</label>
                <input asp-for="Staff.LastName" class="form-select" />
                <span asp-validation-for="Staff.LastName" class="warning-alert"></span>
            </div>

            <div class="form-group">
                <label asp-for="Staff.Role" class="card-label">Role</label>
                <input asp-for="Staff.Role" class="form-select" />
                <span asp-validation-for="Staff.Role" class="warning-alert"></span>
            </div>

            <div class="form-group">
                <label asp-for="Staff.IsFirstAider" class="card-label">First Aider</label>
                <div class="checkbox-wrapper">
                    <input asp-for="Staff.IsFirstAider" />
                </div>
                <span asp-validation-for="Staff.IsFirstAider" class="warning-alert"></span>
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn-create">Create Staff</button>
                <a asp-page="Index" class="btn-cancel">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
