@page
@model ThAmCo.Events.Pages.Staff.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Create New Staff Member</h1>
        <p class="lead">Fill in the details to create a new staff member.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="card-title mb-3">Staff Information</h4>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Staff.FirstName" class="control-label">First Name</label>
                    <input asp-for="Staff.FirstName" class="form-control" />
                    <span asp-validation-for="Staff.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Staff.LastName" class="control-label">Last Name</label>
                    <input asp-for="Staff.LastName" class="form-control" />
                    <span asp-validation-for="Staff.LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Staff.Role" class="control-label">Role</label>
                    <input asp-for="Staff.Role" class="form-control" />
                    <span asp-validation-for="Staff.Role" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-person-plus"></i> Create Staff
                    </button>
                    <a class="btn btn-secondary btn-lg" asp-page="Index">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
