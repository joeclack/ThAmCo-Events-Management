@page
@model ThAmCo.Events.Pages.Staff.IndexModel
@{
    ViewData["Title"] = "Staff Members List";
}

<div class="page-container">
    <header class="header">
        <h1>Staff Management</h1>
    </header>

    <section class="create-total-header">
        <button type="button" class="btn-create">
            Create New Staff
        </button>
        @if (Model.StaffMembers.Any())
        {
            <span class="count-span">@Model.StaffMembers.Count() staff</span>
        }
    </section>
        <div class="card-body">
            @if (Model.StaffMembers.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th style="width: 5%;">Name</th>
                            <th style="width: 20%;">@Html.DisplayNameFor(model => model.StaffMembers[0].Role)</th>
                            <th style="width: 100%;">@Html.DisplayNameFor(model => model.StaffMembers[0].Staffings)</th>
                            <th style="width: min-content">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.StaffMembers)
                        {
                            <tr>
                                <td>
                                    <div>
                                        <p>@item.FirstName @item.LastName</p>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <p>
                                            <span class="badge @item.Role">@item.Role</span>
                                            @if (item.IsFirstAider)
                                            {
                                                <span class="badge first-aider ml-2">First Aider</span>
                                            }
                                        </p>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        @if (item.Staffings.Any())
                                        {
                                        @foreach (var staffing in item.Staffings.Where(s => s.Event.Date >= DateTime.Today && !s.Event.IsCanceled))
                                            {
                                                <span class="badge">@staffing.Event.Name</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">No event assignments</span>
                                        }
                                    </div>
                                </td>
                                <td style="text-align: right;">
                                    <form asp-page-handler="DeleteStaff" class="action-buttons">
                                        <a class="btn btn-edit" asp-page="./Edit" asp-route-id="@item.StaffId">
                                            <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                                <path stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z" />
                                            </svg>
                                        </a>

                                        <a class="btn btn-details" asp-page="./Details" asp-route-id="@item.StaffId">
                                            <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                                <path stroke="#fff" stroke-width="2" d="M21 12c0 1.2-4.03 6-9 6s-9-4.8-9-6c0-1.2 4.03-6 9-6s9 4.8 9 6Z" />
                                                <path stroke="#fff" stroke-width="2" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                            </svg>
                                        </a>
                                        <input type="hidden" name="staffId" value="@item.StaffId" />
                                        <button type="submit" class="btn btn-delete">
                                            <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z" />
                                            </svg>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert info-alert">
                    No staff members found. Click "Create New Staff" to add a team member.
                </div>
            }
        </div>
    </div>
</div>
