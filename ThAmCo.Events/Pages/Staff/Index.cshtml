@page
@model ThAmCo.Events.Pages.Staff.IndexModel

@{
    ViewData["Title"] = "StaffMembers List";
}

<div class="mx-5 my-2">
    <div class="mb-3">
        <h1 class="display-4">Staff Management</h1>
    </div>
    
    <div class="align-items-center d-flex flex-row mb-2">
        <a class="btn btn-primary bg-gradient" asp-page="Create">
            <i class="bi bi-person-plus"></i> Create New Staff
        </a>
    </div>
    <span class="mb-3 badge bg-info">@Model.StaffMembers.Count() staff</span>
    
    <div class="table-responsive">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Name</th>
                    <th>@Html.DisplayNameFor(model => model.StaffMembers[0].Role)</th>
                    <th class="w-100">@Html.DisplayNameFor(model => model.StaffMembers[0].Staffings)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.StaffMembers)
                {
                    <tr>
                        <td>
                            <div class="hstack gap-2 align-items-center">
                                <div>
                                    <p class="fw-bold mb-1">@item.FirstName @item.LastName</p>
                                </div>
                                @if (item.IsFirstAider)
                                {
                                    <i class="bi bi-bandaid"></i>
                                }
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div>
                                    <p class="fw-bold mb-1">@item.Role</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex flex-wrap">
                                @foreach (var staffing in item.Staffings)
                                {
                                    <span class="badge bg-info text-light me-1 p-2">
                                        @staffing.Event.Name
                                    </span>
                                }
                            </div>
                        </td>
                        <td>
                            <div class="hstack gap-1" role="group">
                                <a asp-page="./Edit" class="btn btn-primary btn-sm" asp-route-id="@item.StaffId">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-page="./Details" class="btn btn-info btn-sm text-white" asp-route-id="@item.StaffId">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a data-toggle="modal" data-id="@item.StaffId" data-target="#deleteConfirmationModal" class="btn btn-danger btn-sm" asp-route-id="@item.StaffId">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalTitle">Are you sure you want to delete this staff?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

                    <!-- Form for delete confirmation -->
                    <form asp-page-handler="DeleteStaff" method="post">
                        <input type="hidden" name="staffId" id="deleteStaffId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    @if (!Model.StaffMembers.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            No staff members found. Click "Create New Staff" to add a team member.
        </div>
    }
</div>
<script>
    $(document).ready(function () {
        $('#deleteConfirmationModal').on('show.bs.modal', function (event) {
            const button = $(event.relatedTarget);
            const staffId = button.data('id');

            $('#modalStaffId').text(staffId);
            $('#deleteStaffId').val(staffId);
        });
    });
</script>
