@page
@model ThAmCo.Events.Pages.Guests.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="mx-5 mt-5">
    <div class="mb-5">
        <h1 class="display-4">Edit Guest</h1>
        <p class="lead">Modify the details of this guest.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="card-title mb-3">Guest Details</h4>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Guest.GuestId" />
                <div class="form-group">
                    <label asp-for="Guest.FirstName" class="control-label"></label>
                    <input asp-for="Guest.FirstName" class="form-control" />
                    <span asp-validation-for="Guest.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Guest.LastName" class="control-label"></label>
                    <input asp-for="Guest.LastName" class="form-control" />
                    <span asp-validation-for="Guest.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Guest.Email" class="control-label"></label>
                    <input asp-for="Guest.Email" class="form-control" />
                    <span asp-validation-for="Guest.Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
    
    <div class="w-100 mx-2">
        <h5>Manage Events</h5>

        @if (!Model.AvailableEvents.Any())
        {
            <div class="alert alert-info mt-2">No more events available to assign guest to.</div>
        }
        else
        {
            <form asp-page-handler="CreateGuestBooking" method="post">
                <input type="hidden" name="guestId" value="@Model.Guest.GuestId" />

                <div class="form-group mt-2">
                    <label for="eventList">Assign to Event</label>
                    <div class="d-flex">
                        <!-- Select Dropdown -->
                        <select id="eventList" class="form-control me-2" name="eventId">
                            <option value="">Select Event</option>
                            @foreach (var _event in Model.AvailableEvents)
                            {
                                <option value="@_event.EventId">@_event.Name</option>
                            }
                        </select>

                        <!-- Submit Button with same height as Select -->
                        <button type="submit" class="btn btn-success h-100">
                            <i class="bi bi-person-plus"></i> Assign To Event
                        </button>
                    </div>
                </div>
            </form>

        }
        <ul class="list-group mt-4">
            @foreach (var guestBooking in Model.Guest.GuestBookings)
            {
                <form asp-page-handler="CancelGuestBooking" method="post">
                    <!-- Hidden inputs for EventId and GuestId -->
                    <input type="hidden" name="eventId" value="@guestBooking.Event.EventId" />
                    <input type="hidden" name="guestId" value="@guestBooking.Guest.GuestId" />

                <li class="list-group-item d-flex justify-content-between">
                        @guestBooking.Event.Name - @guestBooking.Event.Date.ToShortDateString()
                    <button type="submit" class="btn btn-danger btn-sm">
                        <i class="bi bi-x-circle"></i> Cancel booking
                    </button>
                </li>
                </form>
            }
        </ul>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
