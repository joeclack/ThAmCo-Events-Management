@page
@model ThAmCo.Events.Pages.Guests.IndexModel
@{
    ViewData["Title"] = "Guests List";
}

<div class="page-container">
    <div class="create-total-header">
        <h1 class="header">Guest Management</h1>
        <a asp-page="Create" class="btn-submit">
            Create New Guest
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <span class="count-span">@Model.Guests.Count() guests</span>
        </div>

        <div class="card-body">
            @if (Model.Guests.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th style="width: 5%;">Name</th>
                            <th style="width: 5%;">Email</th>
                            <th style="width: 100%;">Bookings</th>
                            <th style="width: min-content">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Guests)
                        {
                            <tr>
                                <td>
                                    <div>
                                        <p>@item.FirstName @item.LastName</p>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <p>@item.Email</p>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        @if (item.GuestBookings.Any())
                                        {
                                            @foreach (var booking in item.GuestBookings)
                                            {
                                                <span class="badge">@booking.Event.Name</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">No bookings</span>
                                        }
                                    </div>
                                </td>
                                <td class="person-row">
                                    <form method="post" class="action-buttons" asp-page-handler="DeleteGuest">
                                        <a class="btn-edit" asp-page="./Edit" asp-route-id="@item.GuestId">Edit</a>
                                        <a class="btn-details" asp-page="./Details" asp-route-id="@item.GuestId">Details</a>
                                        <input type="hidden" name="guestId" value="@item.GuestId" />
                                        <button type="submit" class="btn-delete">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert info-alert">
                    No guests found. Click "Create New Guest" to add your first guest.
                </div>
            }
        </div>
    </div>
</div>
