@page
@model ThAmCo.Events.Pages.Guests.IndexModel

@{
    ViewData["Title"] = "Guests List";
}

<div class="mx-5 mt-5">
    <div class="mb-5">
        <h1 class="display-4">Guest Management</h1>
        <p class="lead">Add, view, and manage your guest list for upcoming events.</p>
    </div>

    <div class="text-right mb-4">
        <a asp-page="Create" class="btn btn-primary bg-gradient">
            <i class="bi bi-person-plus"></i> Create New Guest
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped align-middle shadow-sm rounded">
            <thead class="bg-dark text-light">
                <tr class="align-middle">
                    <th>@Html.DisplayNameFor(model => model.Guests[0].FirstName)</th>
                    <th>@Html.DisplayNameFor(model => model.Guests[0].LastName)</th>
                    <th>@Html.DisplayNameFor(model => model.Guests[0].Email)</th>
                    <th class="w-100">@Html.DisplayNameFor(model => model.Guests[0].GuestBookings)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Guests)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>
                            <div class="d-flex flex-row">
                                @foreach (var booking in item.GuestBookings)
                                {
                                    <div class="p-2 bg-dark mx-1 bg-gradient text-white rounded">
                                        @booking.Event.Name
                                    </div>
                                }
                            </div>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@item.GuestId">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-page="./Details" class="btn btn-info text-white" asp-route-id="@item.GuestId">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a data-toggle="modal" id="openModalButton" data-id="@item.GuestId" data-target="#deleteConfirmationModal" class="btn btn-danger" asp-route-id="@item.GuestId">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalTitle">Are you sure you want to delete this guest?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Guest ID: <span id="modalGuestId"></span></p>
                    <p>This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

                    <!-- Form for delete confirmation -->
                    <form asp-page-handler="DeleteGuest" method="post">
                        <input type="hidden" name="guestId" id="deleteGuestId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Guests.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            No guests found. Click "Create New Guest" to add your first guest.
        </div>
    }
</div>

<script>
    $(document).ready(function () {
        $('#deleteConfirmationModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var guestId = button.data('id');

            $('#modalGuestId').text(guestId);
            $('#deleteGuestId').val(guestId);
        });
    });
</script>


