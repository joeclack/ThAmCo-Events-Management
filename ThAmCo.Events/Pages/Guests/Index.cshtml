@page
@model ThAmCo.Events.Pages.Guests.IndexModel

@{
    ViewData["Title"] = "Guests List";
}

<div class="mx-5 my-2">
    <div class="mb-3">
        <h1 class="display-4">Guest Management</h1>
    </div>

    <div class="align-items-center d-flex flex-row mb-2">
        <a class="btn btn-primary bg-gradient" asp-page="Create">
            <i class="bi bi-person-plus"></i> Create New Staff
        </a>
    </div>
 <span class="mb-3 badge bg-info">@Model.Guests.Count() guests</span>
    <div class="table-responsive">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Name</th>
                    <th class="w-100">Bookings</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Guests)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div>
                                    <p class="fw-bold mb-1">@item.FirstName @item.LastName</p>
                                </div>
                            </div>
                        </td>
                        <td class="w-100">
                            <div class="d-flex flex-wrap">
                                @foreach (var booking in item.GuestBookings)
                                {
                                    <span class="badge bg-info text-light me-1 p-2">
                                        @booking.Event.Name
                                    </span>
                                }
                            </div>
                        </td>
                        <td>
                            <div class="hstack gap-1" role="group">
                                <a asp-page="./Edit" class="btn btn-primary btn-sm" asp-route-id="@item.GuestId">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-page="./Details" class="btn btn-info btn-sm text-white" asp-route-id="@item.GuestId">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a data-toggle="modal" data-id="@item.GuestId" data-target="#deleteConfirmationModal" class="btn btn-danger btn-sm" asp-route-id="@item.GuestId">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalTitle">Are you sure you want to delete this guest?</h5>
                    <button type="button" class="btn btn-close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

                    <!-- Form for delete confirmation -->
                    <form asp-page-handler="DeleteGuest" method="post">
                        <input type="hidden" name="guestId" id="deleteGuestId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Guests.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            No guests found. Click "Create New Guest" to add your first guest.
        </div>
    }
</div>

<script>
    $(document).ready(function () {
        $('#deleteConfirmationModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var guestId = button.data('id');

            $('#modalGuestId').text(guestId);
            $('#deleteGuestId').val(guestId);
        });
    });
</script>


