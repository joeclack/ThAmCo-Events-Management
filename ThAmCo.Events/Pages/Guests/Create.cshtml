@page
@model ThAmCo.Events.Pages.Guests.CreateModel

@{
    ViewData["Title"] = "Create Guest";
}

<div class="page-container">
    <!-- Header Section -->
    <div class="header">
        <h1>Create New Guest</h1>
        <p>Fill in the details to create a new guest.</p>
    </div>

    <!-- Card Container -->
    <div class="card">
        <h4 class="card-title">Guest Information</h4>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert error-alert"></div>

            <div class="form-group">
                <label asp-for="Guest.FirstName" class="card-label">First Name</label>
                <input asp-for="Guest.FirstName" class="form-select" />
                <span asp-validation-for="Guest.FirstName" class="warning-alert"></span>
            </div>

            <div class="form-group">
                <label asp-for="Guest.LastName" class="card-label">Last Name</label>
                <input asp-for="Guest.LastName" class="form-select" />
                <span asp-validation-for="Guest.LastName" class="warning-alert"></span>
            </div>

            <div class="form-group">
                <label asp-for="Guest.Email" class="card-label">Email</label>
                <input asp-for="Guest.Email" class="form-select" />
                <span asp-validation-for="Guest.Email" class="warning-alert"></span>
            </div>

            <!-- Button Group -->
            <div class="modal-footer">
                <button type="submit" class="btn-submit">Create Guest</button>
                <a asp-page="Index" class="btn-cancel">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
