@page

@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Mvc.RazorPages;

@attribute [Authorize]
@model ThAmCo.Events.Pages.Events.IndexModel

@{
    ViewData["Title"] = "Events List";
}

<div class="container">

    <header class="text-center my-4">
        <h1>Event Management</h1>
    </header>

    <section class="d-flex justify-content-between align-items-center mb-4">
        <a asp-page="/Events/ReserveVenue" class="btn btn-primary">
            Create New Event
        </a>
    </section>

    @if (!Model.Events.Any())
    {
        <div role="alert" class="alert alert-warning">
            <strong>No events found.</strong> Click "Create New Event" to add your first event.
        </div>
    }
    else
    {
        <section class="card mb-4">
            <div class="card-header">
                <h5>Upcoming Events</h5>
            </div>
            <div class="card-body">
                <span class="badge bg-secondary">@Model.Events.Count() events</span>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Events[0].Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Events[0].Date)</th>
                            <th>@Html.DisplayNameFor(model => model.Events[0].Location)</th>
                            <th>Tags</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Events)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Date.ToShortDateString()</td>
                                <td>@item.Location</td>
                                <td>
                                    <div class="d-flex flex-wrap">
                                        @if (item.FoodBookingId != -1)
                                        {
                                            <span class="badge bg-info mx-1">Food Booked</span>
                                        }
                                        @if (item.ReservationId != "")
                                        {
                                            <span class="badge bg-success mx-1">Venue Reserved</span>
                                        }
                                        <span class="badge bg-primary mx-1">@item.GuestBookings.Count() Guests</span>
                                        <span class="badge bg-warning mx-1">@item.Staffings.Count() Staff</span>
                                        @if (item.Staffings.Where(s => s.Staff.IsFirstAider).Any())
                                        {
                                            <span class="badge bg-danger mx-1">First Aider</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary mx-1">No First Aider</span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <form method="post" class="d-inline" asp-page-handler="CancelEvent">
                                        <a class="btn btn-outline-primary btn-sm" asp-page="./Edit" asp-route-id="@item.EventId">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a class="btn btn-outline-info btn-sm" asp-page="./Details" asp-route-id="@item.EventId">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        <input type="hidden" name="eventId" value="@item.EventId" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    }

    @if (Model.PastAndCancelledEvents.Any())
    {
        <section class="card mb-4">
            <div class="card-header">
                <h5>Past and Cancelled Events</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Events[0].Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Events[0].Date)</th>
                            <th>@Html.DisplayNameFor(model => model.Events[0].Location)</th>
                            <th>Attendees</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PastAndCancelledEvents)
                        {
                            <tr>
                                @if (item.IsCanceled)
                                {
                                    <td class="text-muted">@item.Name</td>
                                    <td class="text-muted">@item.Date.ToShortDateString()</td>
                                    <td class="text-muted">@item.Location</td>
                                    <td>
                                        <span class="badge bg-secondary">@item.GuestBookings.Count() Guests</span>
                                        <span class="badge bg-info">@item.Staffings.Count() Staff</span>
                                    </td>
                                }
                                else
                                {
                                    <td>@item.Name</td>
                                    <td>@item.Date.ToShortDateString()</td>
                                    <td>@item.Location</td>
                                    <td>
                                        <span class="badge bg-primary">@item.GuestBookings.Count() Guests</span>
                                        <span class="badge bg-warning">@item.Staffings.Count() Staff</span>
                                    </td>
                                }
                                <td>
                                    <a class="btn btn-outline-primary btn-sm" asp-page="./Edit" asp-route-id="@item.EventId">Edit</a>
                                    <a class="btn btn-outline-info btn-sm" asp-page="./Details" asp-route-id="@item.EventId">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    }

    <div id="createEventModal" class="modal fade" tabindex="-1" aria-labelledby="createEventModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createEventModalLabel">Create New Event</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" asp-page-handler="CreateEventFromEventType">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="eventType" class="form-label">Event Type</label>
                            <select class="form-select" id="eventType" name="eventTypeId" required>
                                <option value="">Select Event Type</option>
                                @foreach (var type in Model.EventTypes)
                                {
                                    <option value="@type.Id">@type.Title</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-secondary" asp-page="Create">Continue without reservation</a>
                        <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Next</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
