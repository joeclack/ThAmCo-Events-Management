@page
@model ThAmCo.Events.Pages.Events.IndexModel
@{
    ViewData["Title"] = "Events List";
}

<div class="mx-5 mt-5">
    <div class="mb-5">
        <h1 class="display-4">Event Management</h1>
        <p class="lead">View, create, and manage your events efficiently.</p>
    </div>

    <div class="text-right mb-4">
        <a asp-page="Create" class="btn btn-primary bg-gradient">
            <i class="bi bi-plus-lg"></i> Create New Event
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model.Events)
        {
            <div class="col-md-6 w-25 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title fw-bold text-primary">@Html.DisplayFor(modelItem => item.Name)</h5>

                        <div class="card-text">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="fw-bold">@Html.DisplayNameFor(model => model.Events[0].Date):</span>
                                <span>@Html.DisplayFor(modelItem => item.Date)</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="fw-bold">@Html.DisplayNameFor(model => model.Events[0].Location):</span>
                                <span>@Html.DisplayFor(modelItem => item.Location)</span>
                            </div>
                            
                        </div>

                        <div class="mt-4">
                            <div class="btn-group" role="group">
                                <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@item.EventId">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-page="./Details" class="btn btn-info text-white" asp-route-id="@item.EventId">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a class="btn btn-danger" data-toggle="modal" id="openModalButton" data-id="@item.EventId" data-target="#deleteConfirmationModal">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalTitle">Are you sure you want to delete this event?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Event ID: <span id="modalEventId"></span></p>
                    <p>This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

                    <!-- Form for delete confirmation -->
                    <form asp-page-handler="DeleteEvent" method="post">
                        <input type="hidden" name="eventId" id="deleteEventId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    @if (!Model.Events.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            No events found. Click "Create New Event" to add your first event.
        </div>
    }
</div>
<!-- Add this before any script that uses $ -->


<script>
    $(document).ready(function () {
        $('#deleteConfirmationModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var eventId = button.data('id');
            console.log(eventId);
            $('#modalEventId').text(eventId);
            $('#deleteEventId').val(eventId);
        });
    });
</script>

