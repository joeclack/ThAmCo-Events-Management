@page
@model ThAmCo.Events.Pages.Events.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Delete Event</h1>
        <p class="lead">Are you sure you want to delete this event? This action cannot be undone.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="alert alert-danger">
                <strong>Warning!</strong> This will permanently delete the event.
            </div>

            <h4 class="card-title mb-3">Event Details</h4>
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.Name)</dd>

                <dt class="col-sm-3 font-weight-bold">Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.Date)</dd>

                <dt class="col-sm-3 font-weight-bold">Location</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.Location)</dd>

                <dt class="col-sm-3 font-weight-bold">Event Type</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.EventTypeId)</dd>

                <dt class="col-sm-3 font-weight-bold">Reservation</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.ReservationId)</dd>

                <dt class="col-sm-3 font-weight-bold">Food Booking</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.FoodBookingId)</dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Event.EventId" />
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash"></i> Delete Event
                </button>
                <a asp-page="./Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
