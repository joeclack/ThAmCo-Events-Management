@page
@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Mvc.RazorPages;

@attribute [Authorize]
@model ThAmCo.Events.Pages.Events.CreateModel
@{
    ViewData["Title"] = "Create";
}

<div class="page-container">
    <div class="header">
        <h1>Create New Event</h1>
        <p>Fill in the details to create a new event.</p>
    </div>
    
    <div>
        <h4 class="card-title">Event Information</h4>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert error-alert"></div>

            <div class="form-group">
                <label asp-for="VenueCode" class="card-label">Venue Code</label>
                <input asp-for="VenueCode" readonly class="card-value" />
            </div>
            <div class="form-group">
                <label asp-for="Event.Date" class="card-label">Date</label>
                <input asp-for="Event.Date" type="date" readonly class="card-value" />
            </div>
            <div class="form-group">
                <label asp-for="Event.Name" class="card-label">Event Name</label>
                <input asp-for="Event.Name" class="form-select" />
                <span asp-validation-for="Event.Name" class="warning-alert"></span>
            </div>

            <div class="form-group">
                <label asp-for="Event.Location" class="card-label">Event Location</label>
                <input asp-for="Event.Location" class="form-select" />
                <span asp-validation-for="Event.Location" class="warning-alert"></span>
            </div>

            <div class="modal-footer">
                <a asp-page="Index" class="btn-cancel">Back to List</a>
                <button type="submit" class="btn-create">Create Event</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}