@page
@model ThAmCo.Events.Pages.Events.CreateModel
<link rel="stylesheet" href="../Pages/Events/Create.cshtml.css" />


@{
    ViewData["Title"] = "Create";
}

<div class="page-container">
    <!-- Header Section -->
    <div class="header">
        <h1>Create New Event</h1>
        <p>Fill in the details to create a new event.</p>
    </div>

    <!-- Card Container -->
    <div>
        <h4 class="card-title">Event Information</h4>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert error-alert"></div>

            <div class="form-group">
                <label asp-for="Event.Name" class="card-label">Event Name</label>
                <input asp-for="Event.Name" class="form-select" />
                <span asp-validation-for="Event.Name" class="warning-alert"></span>
            </div>

            <div class="form-group">
                <label asp-for="Event.Location" class="card-label">Event Location</label>
                <input asp-for="Event.Location" class="form-select" />
                <span asp-validation-for="Event.Location" class="warning-alert"></span>
            </div>

            @if (Model.Event.EventTypeId == "")
            {
                <div class="form-group">
                    <label asp-for="Event.Date" class="card-label">Event Date</label>
                    <input asp-for="Event.Date" class="form-select" />
                    <span asp-validation-for="Event.Date" class="warning-alert"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <input type="hidden" name="eventType" value="@Model.Event.EventTypeId" />
                    <label class="card-label">Venue - @Model.Event.EventTypeId</label>
                    <select asp-for="SelectedVenueIdentifier" class="form-select">
                        <option value="">Select Available Venue</option>
                        @foreach (var avail in Model.AllAvailableVenues)
                        {
                            <option value="@avail.Code|@avail.Date">
                                @avail.Name - @avail.Date.Date.ToShortDateString() (Capacity: @avail.Capacity) (£@avail.CostPerHour per hour)
                            </option>
                        }
                    </select>
                </div>
            }

            <!-- Button Group -->
            <div class="modal-footer">
                <button type="submit" class="btn-create">Create Event</button>
                <a asp-page="Index" class="btn-cancel">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
