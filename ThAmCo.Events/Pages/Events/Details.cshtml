@page "{id:int}"
@model ThAmCo.Events.Pages.Events.DetailsModel

@{
    ViewData["Title"] = "Event Details";
}

<div class="container-fluid px-4 mt-4">
    <div class="mb-5">
        <h1 class="display-4">Event Details</h1>
        <p class="lead">View the details for this event.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="card-title mb-3">Event Information</h4>
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Name</dt>
                <dd class="col-sm-9">@Model.Event.Name</dd>

                <dt class="col-sm-3 font-weight-bold">Date</dt>
                <dd class="col-sm-9">@Model.Event.Date.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3 font-weight-bold">Location</dt>
                <dd class="col-sm-9">@Model.Event.Location</dd>

                <dt class="col-sm-3 font-weight-bold">Guests</dt>
                <dd class="col-sm-9">@Model.Event.GuestBookings.Count</dd>

                <dt class="col-sm-3 font-weight-bold">Staff</dt>
                <dd class="col-sm-9">@Model.Event.Staffings.Count</dd>

                @if (Model.Event.IsFoodBooked)
                {
                    <dt class="col-sm-3 font-weight-bold">Menu</dt>
                    <dd class="col-sm-9">@Model.FoodBooking.MenuName</dd>
                }
                else
                {
                    <dd class="col-sm-9">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createFoodBookingModal">
                            Book Food
                        </button>
                    </dd>
                }
            </dl>

            @if (Model.IsUnderStaffed)
            {
                <div class="alert alert-danger">@Model.UnderStaffAlertText</div>
            }

            @if (!Model.FirstAiderPresent)
            {
                <div class="alert alert-danger">Please add a staff member who is a first aider</div>
            }
        </div>
    </div>

</div>

<div class="modal fade" id="createFoodBookingModal" tabindex="-1" role="dialog" aria-labelledby="createFoodBookingModalLabel">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createFoodBookingModalLabel">Create Food Booking</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-page-handler="CreateFoodBooking">
                <input type="hidden" asp-for="Event.EventId" />
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="FoodBooking.MenuId">Menu</label>
                        <select asp-for="FoodBooking.MenuId" class="form-control">
                            <option value="">Select Menu</option>
                            @foreach (var menu in Model.AvailableMenus)
                            {
                                <option value="@menu.MenuId">@menu.MenuName</option>
                            }
                        </select>
                        <span asp-validation-for="FoodBooking.MenuId" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Food Booking</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}