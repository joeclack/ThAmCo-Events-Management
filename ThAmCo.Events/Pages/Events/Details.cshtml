@page "{id:int}"
@model ThAmCo.Events.Pages.Events.DetailsModel

@{
    ViewData["Title"] = "Event Details";
}

<div class="container-fluid px-4 mt-4">
    <div class="mb-5">
        <h1 class="display-4">Event Details</h1>
        <p class="lead">View the details for this event.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="card-title mb-3">Event Information</h4>
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Name</dt>
                <dd class="col-sm-9">@Model.Event.Name</dd>

                <dt class="col-sm-3 font-weight-bold">Date</dt>
                <dd class="col-sm-9">@Model.Event.Date.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3 font-weight-bold">Location</dt>
                <dd class="col-sm-9">@Model.Event.Location</dd>

                <dt class="col-sm-3 font-weight-bold">Type</dt>
                <dd class="col-sm-9">@Model.Event.EventTypeId</dd>

                <dt class="col-sm-3 font-weight-bold">Reservation Ref</dt>
                <dd class="col-sm-9">@Model.Reservation.Reference</dd>

                <dt class="col-sm-3 font-weight-bold">Venue</dt>
                <dd class="col-sm-9">@Model.Reservation.VenueCode</dd>

                <dt class="col-sm-3 font-weight-bold">Guests</dt>
                <dd class="col-sm-9">@Model.Event.GuestBookings.Count</dd>

                <dt class="col-sm-3 font-weight-bold">Staff</dt>
                <dd class="col-sm-9">@Model.Event.Staffings.Count</dd>

                @if (Model.FoodBookingMenuInfo != null)
                {
                    <dt class="col-sm-3 font-weight-bold">Menu</dt>
                    <dd class="col-sm-9">@Model.FoodBookingMenuInfo.MenuName</dd>
                }
                else
                {
                    <dd class="col-sm-9">
                        <strong class="badge bg-danger">No food booking found</strong>
                    </dd>
                }
            </dl>

            @if (Model.IsUnderStaffed)
            {
                <div class="alert alert-danger">@Model.UnderStaffAlertText</div>
            }

            @if (!Model.FirstAiderPresent)
            {
                <div class="alert alert-danger">Please add a staff member who is a first aider</div>
            }
        </div>
    </div>
    <div class=" mt-4">
        <a asp-page="./Edit" class="btn btn-primary btn" asp-route-id="@Model.Event.EventId">
            <i class="bi bi-pencil-square"></i> Edit Event
        </a>
        <a asp-page="./Index" class="btn btn-secondary btn">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}