@page
@model ThAmCo.Events.Pages.Account.ProfileModel
@{
   ViewData["Title"] = "User Profile";
}
<div class="page-container">
    <header class="header">
        <h1>User Profile</h1>
        <p>View and manage your profile information.</p>
    </header>
    <div class="card">
        <div class="row">
            <div class="col-md-6">
                <div class="profile-image-container">
                    <img src="@Model.UserProfile.ProfileImage"
                         alt="Profile Picture" class="profile-image" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="card-body">
                    <div class="profile-info">
                        <div class="info-item">
                            <span class="card-label">Name:</span>
                            <span class="card-value">@Model.UserProfile.Name</span>
                        </div>
                        <div class="info-item">
                            <span class="card-label">Email:</span>
                            <span class="card-value">@Model.UserProfile.EmailAddress</span>
                        </div>
                        <!-- Add more profile fields as needed -->
                    </div>
                    <div class="action-buttons mt-1">
                        <a href="#" class="btn-edit">Edit Profile</a>
                        <a href="#" class="btn-details">Change Password</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
