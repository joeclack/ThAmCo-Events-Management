<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - ThAmCo.Events</title>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/ThAmCo.Events.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-page="/Index">ThAmCo</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<i class="bi bi-list text-white"></i>
				</button>
				<div class="collapse navbar-collapse justify-content-between" id="navbarNav">
					<ul class="navbar-nav">
						@if (User.Identity.IsAuthenticated)
						{
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-page="/Events/Index">Events</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-page="/Guests/Index">Guests</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-page="/Staff/Index">Staff</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-page="/Catering/Menus/Index">Menus</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-page="/Catering/FoodItems/Index">Food Items</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-page="/Catering/FoodBookings/Index">Food Bookings</a>
							</li>
						}


					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>
	<partial name="_CookieConsentPartial" />

	<main role="main">
		@RenderBody()
	</main>

	<footer class="bg-dark text-white py-3">
		<div class="container text-center">
			&copy; 2024 - ThAmCo Events
		</div>
	</footer>

	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
