<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - ThAmCo.Events</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/ThAmCo.Events.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="nav-container">
                <a class="logo" asp-area="" asp-page="/Index">ThAmCo</a>
                <ul class="nav-links">
                    <li><a asp-area="" class="nav-link" asp-page="/Events/Index">Events</a></li>
                    <li><a asp-area="" class="nav-link" asp-page="/Guests/Index">Guests</a></li>
                    <li><a asp-area="" class="nav-link" asp-page="/Staff/Index">Staff</a></li>
                    <li class="dropdown">
                        <a href="#" id="cateringDropdown" role="button" aria-expanded="false">
                            Catering
                        </a>
                        <ul class="dropdown-menu-links">
                            <li><a asp-area="" class="dropdown-menu-link" asp-page="/Catering/Menus/Index">Menus</a></li>
                            <li><a asp-area="" class="dropdown-menu-link" asp-page="/Catering/FoodItems/Index">Food Items</a></li>
                            <li><a asp-area="" class="dropdown-menu-link" asp-page="/Catering/FoodBookings/Index">Bookings</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div class="footer-container">
            &copy; 2024 - ThAmCo Events
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>